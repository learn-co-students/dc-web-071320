<%= form_for @taco do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :price %>
    <%= f.number_field :price, min: 0, step: 0.10 %>
    <%= f.label :vegetarian %>
    <%= f.select :vegetarian, [true, false] %>
    <%= f.label :restaurant %>
    <%= f.collection_select(:restaurant_id, Restaurant.all, :id, :name, {include_blank: "Choose a Restaurant"}) %>

    <div>Ingredients</div>
    <%= f.collection_check_boxes(:ingredient_ids, Ingredient.all, :id, :name) %>

    <%= f.submit submit_text %>
<% end %>