<h1>Create a new taco</h1>

<%= form_for @taco do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :price %>
    <%= f.number_field :price, min: 0, step: 0.10 %>
    <%= f.label :vegetarian %>
    <%= f.select :vegetarian, [true, false] %>
    <%= f.submit "Make a New Taco" %>
<% end %>